<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingBottom="5dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/txt_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:maxLines="1"
        android:text="Name"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_view_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgBtnInfo"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/imgBtnInfo"
        android:layout_toLeftOf="@+id/imgBtnPlus"
        android:maxLines="1"
        android:text="Name" />


    <ImageButton
        android:id="@+id/imgBtnPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/plus" />

    <ImageButton
        android:id="@+id/imgBtnInfo"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/txt_view_name"
        android:layout_below="@+id/txt_view_name"
        android:layout_marginTop="10dp"
        android:background="@drawable/info_icon" />

    <!--
         <ImageView
        android:id="@+id/img_view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/margin_top_left"
        android:layout_marginRight="@dimen/margin_top_left"
        android:layout_marginTop="10dp"
        android:background="@color/light_gray" />
    -->

</RelativeLayout>